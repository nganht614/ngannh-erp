<odoo>
    <record id ='it_equipment_form' model= 'ir.ui.view'>
        <field name='name'>it.equipment.form</field>
        <field name='model'>it.equipment</field>
        <field name='arch' type='xml'> 
            <form string ='IT Equipment'>
                <sheet>
                    <group>
                        <field name ='name' />
                        <field name ='code'/>
                        <field name ='price'/>
                        <field name ='quantity'/>
                        <field name ='active'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='it_equipment_list' model='ir.ui.view'>
        <field name ='name'>it.equipment.list</field>
        <field name ='model'>it.equipment</field>
        <field name ='arch' type ='xml'>
            <list string ='IT Equipment'>
                <field name ='name' />
                <field name ='code' />
            </list>
        </field>
    </record>
    
    <record id='it_equipment' model='ir.actions.act_window'> 
        <field name='name'>IT Equipment</field>
        <field name='res_model'>it.equipment</field>
        <field name='view_mode'>list,form</field>
    </record>

    <menuitem id="it_equipment_menu" name="IT Equipment" parent="it_equipment_request_menu" action="it_equipment"/>
</odoo>