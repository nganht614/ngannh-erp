<odoo>
    <record id ='view_exam_form' model= 'ir.ui.view'>
        <field name='name'> exam.form </field>
        <field name='model'>exam</field>
        <field name='arch' type='xml'> 
            <form string ='Exam'>
                <sheet>
                    <group>
                        <field name ='name' />
                        <field name ='subject' />
                        <field name ='score' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='view_exam_list' model='ir.ui.view'>
        <field name ='name'> exam.list</field>
        <field name ='model'>exam</field>
        <field name ='arch' type ='xml'>
            <list string ='Exam'>
                <field name ='name'/>
                <field name ='subject'/>
                <field name ='score'/>
            </list>
        </field>
    </record>
    <record id='exam_action' model='ir.actions.act_window'> 
        <field name='name'> Exams </field>
        <field name='res_model'>exam</field>
        <field name='view_mode'>list,form</field>
    </record>

    <menuitem id='exam_menu' name ='ExamList' sequence ='10'/>
    <menuitem id='todo_exam_menu' name ='Exam' parent ='exam_menu' action='exam_action'/>

</odoo>