<odoo>
    <record id ='library_book_form' model= 'ir.ui.view'>
        <field name='name'>library.book.form</field>
        <field name='model'>library.book</field>
        <field name='arch' type='xml'> 
            <form string ='Library Book'>
                <header>
                    <button name="action_archive" type="object" string="Archive"/>
                </header>
                <sheet>
                    <group>
                        <field name ='name' />
                        <field name ='isbn' />
                        <field name ='author_id'/>
                        <field name ='category_ids' widget="many2many_tags"/>
                        <field name ='published_date' />
                        <field name ='pages' />
                        <field name ='active' />
                        <field name ='description' />
                        <field name ='archive_date' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='library_book_list' model='ir.ui.view'>
        <field name ='name'>library.book.list</field>
        <field name ='model'>library.book</field>
        <field name ='arch' type ='xml'>
            <list string ='Library Book'>
                <field name ='name' />
                <field name ='isbn' />
                <field name ='published_date' />
            </list>
        </field>
    </record>
    <record id='lib_book' model='ir.actions.act_window'> 
        <field name='name'> Library Book </field>
        <field name='res_model'>library.book</field>
        <field name='view_mode'>list,form</field>
    </record>

    <record model="ir.actions.server" id="action_create_lib_loans">
        <field name="name"> Create Quickly</field>
        <field name="model_id" ref="model_library_book"/>
        <field name="binding_model_id" ref="model_library_book" />
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_create_loans()
        </field>
    </record>

    <menuitem id="library_management_menu" name="Library Management" />
    <menuitem id="library_book_menu" name="Library Book" parent="library_management_menu" action="lib_book"/>
</odoo>