<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lib_readers_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">lib.readers.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_address_format')]/field[@name='city']" position="replace">
                <field name="is_town_enabled" invisible="1"/>
                <field name="town_id" placeholder="Town" invisible='is_town_enabled == False'/>
                <field name="city_id" placeholder="City" class="o_address_city"    />
            </xpath>
        </field>
    </record>
</odoo> 
