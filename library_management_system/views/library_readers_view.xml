<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lib_readers_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">lib.readers.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Library Info">
                    <group>
                        <field name="is_library_member"/>
                        <field name="library_card_code"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo> 
