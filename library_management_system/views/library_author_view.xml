<odoo>
    <record id ='library_author_form' model= 'ir.ui.view'>
        <field name='name'>library.author.form</field>
        <field name='model'>library.author</field>
        <field name='arch' type='xml'> 
            <form string ='Library Author'>
                <sheet>
                    <group>
                        <field name ='name' />
                        <field name ='book_ids' readonly='1'>
                            <list editable='bottom'>
                                <field name ='name' />
                                <field name ='isbn' />
                                <field name ='category_ids'/>
                                <field name ='published_date' />
                                <field name ='pages' />
                                <field name ='active' />
                                <field name ='description' />
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='library_author_list' model='ir.ui.view'>
        <field name ='name'>library.author.list</field>
        <field name ='model'>library.author</field>
        <field name ='arch' type ='xml'>
            <list string ='Library Author'>
                <field name ='name' />
                <field name ='book_ids' />
            </list>
        </field>
    </record>
    <record id='lib_author' model='ir.actions.act_window'> 
        <field name='name'> Library Author </field>
        <field name='res_model'>library.author</field>
        <field name='view_mode'>list,form</field>
    </record>

    <menuitem id="library_author_menu" name="Library Author" parent="library_management_menu" action="lib_author"/>
</odoo>