<odoo>
    <record id ='list_actor_movie_form' model= 'ir.ui.view'>
        <field name='name'>list.actor.movie.form</field>
        <field name='model'>list.actor.movie</field>
        <field name='arch' type='xml'> 
            <form string ='Actor Movie'>
                <sheet>
                    <group>
                        <field name ='actor_id' />
                        <field name ='movie_id' />
                        <field name ='role_name' />
                        <field name ='is_main_role' />
                        <field name ='salary' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='list_actor_movie_list' model='ir.ui.view'>
        <field name ='name'>list.actor.movie.list</field>
        <field name ='model'>list.actor.movie</field>
        <field name ='arch' type ='xml'>
            <list string ='Actor Movie'>
                <field name ='actor_id' />
                <field name ='movie_id' />
                <field name ='role_name' />
                <field name ='is_main_role' />
            </list>
        </field>
    </record>
    <record id='actor_movie_action' model='ir.actions.act_window'> 
        <field name='name'> Actor Movie </field>
        <field name='res_model'>list.actor.movie</field>
        <field name='view_mode'>list,form</field>
    </record>

</odoo>